BerTreeView::branch:has-siblings:!adjoins-item {
    border-image: url(:/images/vline.png) 0;
}

BerTreeView::branch:has-siblings:adjoins-item {
    border-image: url(:/images/branch-more.png) 0;
}

BerTreeView::branch:!has-children:!has-siblings:adjoins-item {
    border-image: url(:/images/branch-end.png) 0;
}

BerTreeView::branch:has-children:!has-siblings:closed,
BerTreeView::branch:closed:has-children:has-siblings {
        border-image: none;
        image: url(:/images/branch-closed.png);
}

BerTreeView::branch:open:has-children:!has-siblings,
BerTreeView::branch:open:has-children:has-siblings  {
        border-image: none;
        image: url(:/images/branch-open.png);
}
